- unless smart_listing.empty?
  %table.table.table-striped
    %thead
      %th.col-md-2= "Image"
      %th.col-md-1= smart_listing.sortable "date uploaded", "record_taken"
      %th.col-md-1= smart_listing.sortable "created at", "created_at"
      %th.col-md-1= smart_listing.sortable "Site", "site"
      %th.col-md-1= smart_listing.sortable "Source", "source"
      %th.col-md-1= "Reliable"
      %th.col-md-1= "category"
      %th.col-md-3= "Weather Info"
      %th.col-md-2= "actions"
    %tbody
      - smart_listing.collection.each do |o|
        %tr.editable{:data => {:id => o.id}}
          = smart_listing.render object: o, partial: "images/image", locals: {object: o}

    %div.smart-listing-new-button
      = smart_listing.item_new colspan: 12, link: new_image_path

  = smart_listing.paginate
  = smart_listing.pagination_per_page_links

- else
  %p.warning No records!
