- cache object do
  %td.table-text= object.site.name
  %td.table-text
    -# TODO: refactor this with presenter when add images in...
    %img.index-main{:src => ""}/
  
  %td.table-text= object.type.name if object.type
  %td.table-text= object.reliable
  %td.table-text= object.tags
  %td.table-text= object.record_taken.to_date.strftime "%d/%m/%y" if object.record_taken
  %td.table-text= object.created_at.strftime "%d/%m/%y"

  -# if object.weather_info
    %td.table-text= object.weather_info["data"][0]["summary"]
  %td.actions= smart_listing_item_actions [{name: :show, url: site_submission_path(object.site_id, object.id)}, {name: :edit, url: edit_site_submission_path(object.site_id, object.id)}, {name: :destroy, url: site_submission_path(object.site_id, object.id), confirmation: "Are you sure you want to delete this submission?"}]
